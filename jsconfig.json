{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@imgs/*": ["src/assets/images/*"],
      "@comps/*": ["src/components/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["element-plus/global", "./auto-imports.d.ts"] // 智能提示
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
